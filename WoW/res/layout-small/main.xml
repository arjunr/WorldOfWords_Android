<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:id="@+id/name"
   
    >
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:text="TextView" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/textView1" 
        android:layout_alignParentTop="true" 
        android:layout_alignParentRight="true">
        
    </TextView>
    <TextView 
    	android:textAppearance="?android:attr/textAppearanceMedium" 
   	 	android:text="TextView"
   	 	android:layout_height="wrap_content" 
   	 	android:layout_width="wrap_content" 
   	 	android:layout_alignBottom="@+id/textView1" 
   	 	android:layout_alignParentLeft="true"
   	 	android:gravity="center_vertical|center_horizontal"
   	 	android:layout_alignBaseline="@id/textView1"
   	 	android:id="@+id/timer">
   	 </TextView>

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="80dp"
        android:text="A"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/Button01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="B" />
	<Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="F" />

    <Button
        android:id="@+id/Button21"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="C" />
	<Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="145dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="E" />

    <Button
        android:id="@+id/Button31"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="80dp"
        android:layout_marginTop="145dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="D" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
		android:text="SUBMIT" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/possibleNoWords"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/possibleNoWords"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
	<TextView
        android:id="@+id/possibleNoWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:text="3"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/innerLaoyout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Suggestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="6"
            android:textSize="20dp"
		    android:textAppearance="?android:attr/textAppearanceSmall" 
		    android:visibility="invisible"/>

        <TextView
            android:id="@+id/Suggestion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/Suggestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/center"
            android:layout_below="@+id/Suggestion4"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="3"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/Suggestion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Suggestion1"
            android:layout_below="@+id/center"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="4"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="5"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
       </RelativeLayout>
    
</RelativeLayout>
